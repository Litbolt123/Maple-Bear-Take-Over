{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.infected_mb_variant_0": {
			"initial_state": "idle",
			"states": {
				"idle": {
					"animations": [
						{"idle": "query.variant == 0"},
						{"idle2": "query.variant == 1"},
						{"idle3": "query.variant == 2"},
						{"idle4": "query.variant == 3"},
						{"idle5": "query.variant == 4"}
					],
					"transitions": [
						{
							"walk": "query.ground_speed > 0.1"
						},
						{
							"falling": "!query.is_on_ground"
						}
					],
					"blend_transition": 0.2
				},
				"walk": {
					"animations": [
						{"walk": "query.variant == 0"},
						{"walk2": "query.variant == 1"},
						{"walk3": "query.variant == 2"},
						{"walk4": "query.variant == 3"},
						{"walk5": "query.variant == 4"}
					],
					"transitions": [
						{
							"idle": "query.ground_speed < 0.1"
						},
						{
							"falling": "!query.is_on_ground"
						}
					],
					"blend_transition": 0.2
				},
				"falling": {
					"animations": [
						{"falling": "query.variant == 0"},
						{"falling2": "query.variant == 1"},
						{"falling3": "query.variant == 2"},
						{"falling4": "query.variant == 3"},
						{"falling5": "query.variant == 4"}
					],
					"transitions": [
						{
							"idle": "query.is_on_ground && query.ground_speed < 0.1"
						},
						{
							"walk": "query.is_on_ground && query.ground_speed > 0.1"
						}
					],
					"blend_transition": 0.2
				}
			}
		},
