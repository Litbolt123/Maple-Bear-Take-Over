{
	"format_version": "1.8.0",
	"minecraft:spawn_rules": {
		"description": {
			"identifier": "mb:mb",
			"population_control": "monster"
		},
		"conditions": [
			{
				"minecraft:spawns_above_block_filter": {
					"blocks": [
						"mb:dusted_dirt",
						"mb:snow_layer"
					],
					"distance": 1,
					"allow_air_above": true
				},
				"minecraft:brightness_filter": {
					"min": 0,
					"max": 15,
					"adjust_for_weather": false
				},
				"minecraft:difficulty_filter": {
					"min": "easy",
					"max": "hard"
				},
				"minecraft:weight": {
					"default": 40,
					"infected_biome": 80
				},
				"minecraft:herd": {
					"min_size": 1,
					"max_size": 2
				},
				"minecraft:density_limit": {
					"surface": 30
				},
				"minecraft:distance_filter": {
					"min": 2,
					"max": 86
				},
				"minecraft:height_filter": {
					"min": -64,
					"max": 320
				},
				"minecraft:biome_filter": {
					"test": "has_biome_tag",
					"operator": "==",
					"value": "infected_biome"
				},
				"minecraft:world_age_filter": {
					"min": 1800,
					"max": 999999
				}
			}
		]
	}
}